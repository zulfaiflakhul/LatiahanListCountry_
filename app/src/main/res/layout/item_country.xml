<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="20dp"
    android:elevation="7dp"
    android:translationZ="7dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="225dp">

        <ImageView
            android:id="@+id/img_country"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />


        <TextView
            android:id="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_country"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/name_country"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_country"
            android:layout_marginHorizontal="5dp"
            android:text="@string/capital_country"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cpopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_capital"
            android:layout_marginHorizontal="5dp"
            android:text="@string/capital_country"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cpopulation"
            android:layout_marginHorizontal="5dp"
            android:text="@string/capital_country"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>